{
  "title": "Maintenance Overview",
  "uid": "maintenance-overview",
  "version": 1,
  "panels": [
    {
      "title": "Maintenance Activities",
      "type": "timeseries",
      "gridPos": {"x": 0, "y": 0, "w": 12, "h": 8},
      "targets": [
        {
          "expr": "sum(maintenance_total) by (type)",
          "legendFormat": "{{type}}"
        }
      ],
      "options": {
        "legend": {
          "showLegend": true,
          "placement": "bottom"
        },
        "tooltip": {
          "mode": "multi",
          "sort": "desc"
        }
      }
    },
    {
      "title": "Maintenance Duration",
      "type": "heatmap",
      "gridPos": {"x": 12, "y": 0, "w": 12, "h": 8},
      "targets": [
        {
          "expr": "rate(maintenance_duration_seconds_bucket[5m])",
          "format": "heatmap",
          "legendFormat": "{{le}}"
        }
      ],
      "options": {
        "calculate": true,
        "calculation": "mean",
        "color": {
          "mode": "scheme",
          "scheme": "RdYlBu"
        }
      }
    },
    {
      "title": "Maintenance Errors",
      "type": "stat",
      "gridPos": {"x": 0, "y": 8, "w": 6, "h": 4},
      "targets": [
        {
          "expr": "sum(maintenance_errors_total)",
          "instant": true
        }
      ],
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "auto",
        "textMode": "auto",
        "thresholds": {
          "mode": "absolute",
          "steps": [
            { "color": "green", "value": null },
            { "color": "yellow", "value": 1 },
            { "color": "red", "value": 5 }
          ]
        }
      }
    },
    {
      "title": "Performance Impact",
      "type": "timeseries",
      "gridPos": {"x": 6, "y": 8, "w": 18, "h": 8},
      "targets": [
        {
          "expr": "rate(http_request_duration_seconds_sum[5m]) / rate(http_request_duration_seconds_count[5m])",
          "legendFormat": "Response Time"
        }
      ],
      "options": {
        "legend": {
          "showLegend": true,
          "placement": "bottom"
        }
      }
    },
    {
      "title": "Maintenance Calendar",
      "type": "calendar",
      "gridPos": {"x": 0, "y": 16, "w": 24, "h": 8},
      "targets": [
        {
          "expr": "count(maintenance_total) by (day)",
          "legendFormat": "Activities"
        }
      ],
      "options": {
        "showLegend": true,
        "from": "now-90d"
      }
    }
  ],
  "refresh": "1m",
  "schemaVersion": 36,
  "style": "dark",
  "tags": ["maintenance", "operations"],
  "time": {
    "from": "now-24h",
    "to": "now"
  },
  "timepicker": {
    "refresh_intervals": [
      "5s",
      "10s",
      "30s",
      "1m",
      "5m",
      "15m",
      "30m",
      "1h",
      "2h",
      "1d"
    ]
  },
  "timezone": "browser",
  "templating": {
    "list": [
      {
        "name": "maintenance_type",
        "type": "query",
        "query": "label_values(maintenance_total, type)",
        "refresh": 2
      }
    ]
  },
  "annotations": {
    "list": [
      {
        "name": "Maintenance Events",
        "datasource": "Prometheus",
        "expr": "changes(maintenance_total[5m]) > 0",
        "tagKeys": ["type"],
        "titleFormat": "Maintenance: {{type}}"
      }
    ]
  }
} 