{
  "annotations": {
    "list": []
  },
  "editable": true,
  "graphTooltip": 0,
  "panels": [
    {
      "title": "Service Health Status",
      "type": "stat",
      "targets": [
        {
          "expr": "up{job=\"lang-portal-api\"}",
          "legendFormat": "API Status"
        }
      ],
      "options": {
        "colorMode": "background",
        "graphMode": "none",
        "justifyMode": "center",
        "textMode": "value",
        "thresholds": {
          "steps": [
            { "color": "red", "value": null },
            { "color": "green", "value": 1 }
          ]
        }
      },
      "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0}
    },
    {
      "title": "Response Time Percentiles",
      "type": "timeseries",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(handler_request_duration_bucket[5m])) by (le))",
          "legendFormat": "p95"
        },
        {
          "expr": "histogram_quantile(0.99, sum(rate(handler_request_duration_bucket[5m])) by (le))",
          "legendFormat": "p99"
        }
      ],
      "gridPos": {"h": 8, "w": 12, "x": 6, "y": 0}
    },
    {
      "title": "Memory Usage",
      "type": "gauge",
      "gridPos": {"x": 0, "y": 0, "w": 8, "h": 8},
      "targets": [
        {
          "expr": "runtime_memory_alloc{job=\"lang-portal\"} / runtime_memory_sys{job=\"lang-portal\"} * 100",
          "legendFormat": "Memory Usage %"
        }
      ],
      "options": {
        "thresholds": [
          {"value": 0, "color": "green"},
          {"value": 70, "color": "yellow"},
          {"value": 85, "color": "red"}
        ]
      }
    },
    {
      "title": "Goroutines",
      "type": "graph",
      "gridPos": {"x": 8, "y": 0, "w": 8, "h": 8},
      "targets": [
        {
          "expr": "runtime_goroutines{job=\"lang-portal\"}",
          "legendFormat": "Active Goroutines"
        }
      ]
    },
    {
      "title": "Database Connections",
      "type": "graph",
      "gridPos": {"x": 16, "y": 0, "w": 8, "h": 8},
      "targets": [
        {
          "expr": "db_connections_in_use{job=\"lang-portal\"}",
          "legendFormat": "In Use"
        },
        {
          "expr": "db_connections_idle{job=\"lang-portal\"}",
          "legendFormat": "Idle"
        }
      ]
    }
  ],
  "refresh": "10s",
  "title": "Service Health Dashboard",
  "version": 1
} 